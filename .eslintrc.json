{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "rules": {
        "no-unused-vars": "error",
        "no-undefined": "error",
        "prefer-const": "error",
        "no-console": "warn",
        "no-unused-expressions": "error"
    },
    "env": {
      "browser": true,
      "es2021": true
    }
  }